<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="horizontal"
        tools:context=".ui.AndroidMeActivity">

    <Button
        android:id="@+id/btnRandom"
        android:editable="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp"/>

        <FrameLayout
            android:id="@+id/displayContainer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_bias="-100.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="left"
            app:layout_constraintVertical_bias="0.0"></FrameLayout>


        <FrameLayout
            android:id="@+id/fragheadContainer"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="4dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/fragbodyContainer"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/fraglegContainer"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="4dp"></FrameLayout>


    </LinearLayout>
